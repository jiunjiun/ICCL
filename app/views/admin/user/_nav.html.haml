.well
    / Link or button to toggle dropdown
    %ul.nav
        %li{role: "presentation"}
            %a{:href => admin_user_index_path}
                =t('backend.user.member')
                %span.label.label-primary.pull-right= @statistics[:member]
        %li{role: "presentation"}
            %a{:href => admin_user_audit_path}
                = t('backend.user.audit')
                - if @statistics[:guest] != 0
                    %span.label.label-danger= @statistics[:guest]
        %li{role: "presentation"}
            %a{:href => admin_user_graduation_path}
                = t('backend.user.graduation')
                %span.label.label-primary.pull-right= @statistics[:graduation]