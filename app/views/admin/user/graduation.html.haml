.page-header
    %h1= t('backend.user.graduation')

.row
    .col-md-9
        %table.table.table-striped
            %thead
                %tr
                    %th
                    %th= t('user.role')
                    %th= t('user.classes')
                    %th= t('user.name')
                    %th= t('user.email')
                    %th= t('user.phone')
            - @users.each do |user|
                %tr
                    %td
                        %a{:href => edit_admin_user_path(user)}
                            %span.glyphicon.glyphicon-pencil
                    %td= roleName(user.role)
                    %td= classesName(user.classes)
                    %td= user.name
                    %td= user.email
                    %td= user.phone
    .col-md-3
        = render 'nav'