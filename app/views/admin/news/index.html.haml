%h1= t('backend.news.main')
%a.btn.btn-primary{:href => new_admin_news_path} New
%table.table.table-striped
    %thead
        %tr
            %th
            %th
            %th= t('backend.news.title')
            %th= t('backend.news.status')
    - @news.each do |news|
        %tr
            %td
                =link_to 'Edit', edit_admin_news_path(news)
            %td
                =link_to 'delete', admin_news_path(news), :method => :delete
            %td= news.title
            %td= news.line
            %td= t("backend-status-#{news.status}")
