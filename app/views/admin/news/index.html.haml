.page-header
    %h1= t('backend.news.main')
%a.btn.btn-primary{:href => new_admin_news_path} New
%table.table.table-striped
    %thead
        %tr
            %th.col-md-1
            %th.col-md-1
            %th.col-md-9= t('helper.title')
            %th.col-md-1= t('helper.status')
    - @news.each do |news|
        %tr
            %td
                =link_to 'Edit', edit_admin_news_path(news)
            %td
                =link_to 'delete', admin_news_path(news), :method => :delete
            %td= news.title
            %td= t("helper.status-#{news.status}")
