.page-header
    %h1= t('backend.news.main')
%a.btn.btn-primary{:href => new_admin_news_path} New
%table.table.table-striped
    %thead
        %tr
            %th.col-md-1
            %th.col-md-1
            %th.col-md-9= t('helper.title')
            %th.col-md-1= t('helper.status')
    - @news.each do |news|
        %tr
            %td
                %a{:href => edit_admin_news_path(news)}
                    %span.glyphicon.glyphicon-pencil
            %td
                %a{:href => admin_news_path(news), 'data-method'=> 'delete'}
                    %span.glyphicon.glyphicon-remove
            %td= news.title
            %td= t("helper.status-#{news.status}")
