#Carousel.carousel.slide
  / Indicators
  %ol.carousel-indicators
    - @banners.each_with_index do |banner, i|
      - if i == 0
        %li.active{"data-slide-to" => i, "data-target" => "#Carousel"}
      - else
        %li{"data-slide-to" => i, "data-target" => "#Carousel"}
  .carousel-inner
    - @banners.each_with_index do |banner, i|
      - if i == 0
        .item.active
          = image_tag(banner.file_url())
          .container
            .carousel-caption
      - else
        .item
          = image_tag(banner.file_url())
          .container
            .carousel-caption
          / %h1 Example headline.
          / %p Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit.
          / %p
          /   %a.btn.btn-large.btn-primary{href: "#"} Sign up today
  %a.left.carousel-control{"data-slide" => "prev", href: "#Carousel"}
    %span.glyphicon.glyphicon-chevron-left
  %a.right.carousel-control{"data-slide" => "next", href: "#Carousel"}
    %span.glyphicon.glyphicon-chevron-right